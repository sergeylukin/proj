      ],
      "@sergeylukin/shared/entities/post": [
        "libs/shared/entities/post/src/index.ts"
      ],
      "@sergeylukin/shared/entities/tag": [
        "libs/shared/entities/tag/src/index.ts"
      ],
      "@sergeylukin/shared/entities/user": [
        "libs/shared/entities/user/src/index.ts"
      ],
      "@sergeylukin/shared/generated/config": [
        "libs/shared/generated/config/src/index.ts"
      ],
      "@sergeylukin/shared/generated/entities/page": [
        "libs/shared/generated/entities/page/src/index.ts"
      ],
      "@sergeylukin/shared/generated/entities/post": [
        "libs/shared/generated/entities/post/src/index.ts"
